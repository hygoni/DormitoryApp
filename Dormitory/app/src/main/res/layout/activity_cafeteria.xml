<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#f2f2f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <TextView
            android:id="@+id/todayMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="오늘의 메뉴"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="25dp" />
        <!--  아침아침아침아침아침아침아침아침아침아침아침   -->
        <LinearLayout
            android:id="@+id/breakfast_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/activity_cafeteria_border">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="아침 (07:00~09:00)"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/BreakfastA"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/activity_cafeteria_border"
                    android:text="BreakfastA"
                    android:textColor="#000000"/>
                <Button
                    android:id="@+id/cafeteria_evaluation_btn1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="메뉴 평가"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/activity_cafeteria_button"
                    android:textSize="17dp"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/BreakfastC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/activity_cafeteria_border"
                    android:text="BreakfastC"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000" />
                <Button
                    android:id="@+id/cafeteria_evaluation_btn2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="메뉴 평가"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/activity_cafeteria_button"
                    android:textSize="17dp"/>

            </LinearLayout>
        </LinearLayout>
        <!--   점심점심점심점심점심점심점심점심점심점심  -->
        <LinearLayout
            android:id="@+id/lunch_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/activity_cafeteria_border">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="점심 (11:30~13:30)"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/lunchA"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="lunchA"
                    android:textColor="#000000"
                    android:background="@drawable/activity_cafeteria_border"/>
                <Button
                    android:id="@+id/cafeteria_evaluation_btn3"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="메뉴 평가"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/activity_cafeteria_button"
                    android:textSize="17dp"
                    android:textColor="#000"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/lunchB"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="lunchB"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/activity_cafeteria_border"/>
                <Button
                    android:id="@+id/cafeteria_evaluation_btn4"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="메뉴 평가"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/activity_cafeteria_button"
                    android:textSize="17dp"
                    android:textColor="#000"/>

            </LinearLayout>
        </LinearLayout>
        <!--   저녁저녁저녁저녁저녁저녁저녁저녁저녁저녁 -->
        <LinearLayout
            android:id="@+id/dinner_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/activity_cafeteria_border">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="저녁 (17:30~19:30)"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/Dinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Dinner"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/activity_cafeteria_border"/>
                <Button
                    android:id="@+id/cafeteria_evaluation_btn5"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="메뉴 평가"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/activity_cafeteria_button"
                    android:textSize="17dp"
                    android:textColor="#000"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>
</ScrollView>