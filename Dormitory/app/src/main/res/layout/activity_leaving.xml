<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0D0D6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="퇴사시 제출 서류"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_margin="16dp"
            android:gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/leaving_activity_border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            >
            <TextView
                android:id="@+id/bed_textView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="침대 사진을 찍어주세요."
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>
            <ImageButton
                android:id="@+id/bed_camera_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:background="#00FFFFFF"/>
            <!--android:text="촬영"-->

        </LinearLayout>
        <ImageView
            android:id="@+id/bed_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:maxHeight="150dp"
            android:layout_margin="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/desk_textView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="책상 사진을 찍어주세요."
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>
            <Button
                android:id="@+id/desk_camera_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="촬영"
                android:layout_weight="3" />
        </LinearLayout>
        <ImageView
            android:id="@+id/desk_imageVIew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/bathroom_textView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="화장실 내부 사진을 찍어주세요."
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>
            <Button
                android:id="@+id/bathroom_camera_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="촬영"
                android:layout_weight="3" />
        </LinearLayout>
        <ImageView
            android:id="@+id/bathroom_imageVIew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/closet_textView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="옷장 내부 사진을 찍어주세요."
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>
            <Button
                android:id="@+id/closet_camera_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="촬영"
                android:layout_weight="3" />
        </LinearLayout>
        <ImageView
            android:id="@+id/closet_imageVIew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/refrigerator_textView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="냉장고 내부 사진을 찍어주세요."
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>
            <Button
                android:id="@+id/refrigerator_camera_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="촬영"
                android:layout_weight="3" />
        </LinearLayout>
        <ImageView
            android:id="@+id/refrigerator_imageVIew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/submissionBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="제출"
            android:layout_weight="1" />
    </LinearLayout>
</ScrollView>