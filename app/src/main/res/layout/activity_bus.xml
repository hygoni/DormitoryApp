<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_lab10_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/bus_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_above="@id/resetBtn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="순환버스 A"
                android:textSize="30dp"
                android:gravity="center_horizontal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/A_bus_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="A 운행 정보"
                android:layout_weight="1"
                android:text="" />
            <TextView
                android:id="@+id/A_bus_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="A 시간 출력"
                android:layout_weight="1"
                android:text="" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="순환버스 A 노선도" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="순환버스 B"
                android:gravity="center_horizontal"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/B_bus_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="B 운행 정보"
                android:layout_weight="1"
                android:text="" />
            <TextView
                android:id="@+id/B_bus_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="B 운행 시간"
                android:layout_weight="1"
                android:text="" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="순환버스 B 노선도" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/resetBtn"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="새로고침"
        android:layout_width="match_parent" />

</RelativeLayout>
